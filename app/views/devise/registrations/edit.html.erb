<div class="container center">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>



  <div class="form-group label-floating">
    Foto <i class="material-icons">add_circle</i><br />
    <%= f.file_field :avatar, autofocus: true  %>
  </div>

  <div class="form-group label-floating">
    admin?<br>
      <%= f.check_box :admin %>
  </div>



  <div class="form-group label-floating">
    Nombre<br>
    <%= f.text_field :firstname, class:"form-control", id:"i5" %>
  </div>

  <div class="form-group label-floating">
    Apellido<br>
    <%= f.text_field :lastname, class:"form-control", id:"i5" %>
  </div>

  <div class="form-group label-floating">
    Fecha de nacimiento<br />
    <%= f.date_field :birthdate, autofocus: true, class:"form-control", id:"i5" %>
  </div>

  <div class="form-group label-floating">
    Email<br />
    <%= f.email_field :email, autofocus: true, class:"form-control", id:"i5" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group label-floating">
    Nueva password <i>(Dejar en blanco si no se desea cambiar)</i><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"i5" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="form-group label-floating">
    Confirma password<br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"i5" %>
  </div>

  <div class="form-group label-floating">
    Password actual <i>(Ingresa tu password actual para hacer los cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class:"form-control", id:"i5" %>
  </div>

  <div class="actions">
    <%= f.submit class:"btn btn-raised btn-success" %>
  </div>
<% end %>




</div>

<%= link_to "Back", :back %>
