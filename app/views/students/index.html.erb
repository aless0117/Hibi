
<div class="container padding-box">

<div class="container">
  <div class="box-header">
   <h3 style="color:white;">Alumnos</h3>
   <p style="color:white;">Colegio los Arcos</p>
  </div>
</div>
<div class="container center1">

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Nombre</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>

        <td><%= student.nombre %> <%= student.apellido %></td>

        <td><%= student.classroom.name %></td>

        <td><%= student.classroom.seccion %></td>

        <td><%= link_to student do %>
          <i class="material-icons">person</i>
        <% end %></td>
        <% if can? :create, Student %>
          <td><%= link_to edit_student_path(student) do %>
            <i class="material-icons">create</i>
          <% end%></td>
        <% end%>
        <% if can? :create, Student %>
          <td><%= link_to  student, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="material-icons">delete</i>
          <% end%></td>
        <% end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>

</div>

  <% if can? :create, Student %>
    <div class="boton_new" style="position: fixed;">
      <a href= "students/new" ><i class="material-icons circle">add_circle</i></a>
    </div>
  <% end %>
